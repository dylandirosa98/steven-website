// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Page model for different pages on the site
model Page {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  description String?
  published   Boolean   @default(false)
  order       Int       @default(0)
  sections    Section[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([published])
}

// Section model for different sections within a page
model Section {
  id          String        @id @default(cuid())
  pageId      String
  page        Page          @relation(fields: [pageId], references: [id], onDelete: Cascade)
  type        SectionType
  title       String?
  subtitle    String?
  content     String?       @db.Text
  order       Int           @default(0)
  layout      String        @default("default") // grid, masonry, slider, etc.
  visible     Boolean       @default(true)
  images      Image[]
  contentBlocks ContentBlock[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([pageId])
  @@index([type])
}

enum SectionType {
  HERO
  ABOUT
  PORTFOLIO
  GALLERY
  CONTACT
  CATEGORY
  TEXT
  CUSTOM
}

// Image model for storing image data
model Image {
  id             String   @id @default(cuid())
  sectionId      String?
  section        Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  url            String
  alt            String?
  title          String?
  description    String?  @db.Text
  width          Int?
  height         Int?
  order          Int      @default(0)
  category       String?
  tags           String[] @default([])
  featured       Boolean  @default(false)

  // Mobile layout fields
  // mobileRowType options: '16:9-single' | '1:1-9:16' | '1:1-1:1' | '9:16-9:16' | '16:9-9:16'
  mobileRowType   String?
  mobileRowOrder  Int?     // Which row on mobile (for ordering)
  mobilePosition  Int?     // Position within row (0 or 1)
  aspectRatio     String?  // '16:9' | '9:16' | '1:1'

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([sectionId])
  @@index([category])
  @@index([featured])
  @@index([mobileRowOrder])
}

// Content blocks for flexible content
model ContentBlock {
  id        String   @id @default(cuid())
  sectionId String
  section   Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  type      BlockType
  content   String   @db.Text
  metadata  Json?    // For storing additional data (colors, links, etc.)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sectionId])
}

enum BlockType {
  TEXT
  HEADING
  IMAGE
  BUTTON
  QUOTE
  DIVIDER
  SPACER
  HTML
}

// Settings model for site-wide settings
model SiteSettings {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String   @db.Text
  description     String?
  category        String   @default("general")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([key])
  @@index([category])
}

// Navigation model for managing menu items
model Navigation {
  id        String   @id @default(cuid())
  label     String
  href      String
  order     Int      @default(0)
  visible   Boolean  @default(true)
  external  Boolean  @default(false)
  parentId  String?
  parent    Navigation? @relation("NavigationChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children  Navigation[] @relation("NavigationChildren")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
  @@index([visible])
}

// Contact form submissions
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([read])
  @@index([createdAt])
}
